<div class="row mt-3">
  <div class="col col-md">
    <h1 class="display-4 text-center"><%= t('.user_header') %></h1>
    <table class="table table-hover text-center mt-3">
      <thead>
      <tr>
        <th scope="col"><%= t('.title') %></th>
        <th scope="col"><%= t('.image') %></th>
        <th scope="col"><%= t('.rule') %></th>
        <th scope="col"><%= t('.rule_value') %></th>
      </tr>
      </thead>

      <tbody>
        <% if @badges.present? %>  
          <%= render @badges %>
        <% else %>
          <h3 class="text-center"><%= t('.no_badges') %></h3>
        <% end %>

        <p>
          <%= link_to t('.badge_list'), badges_path, class: 'btn btn-primary btn-sm active' %>
          <%= link_to t('.back'), tests_path, class: 'btn btn-secondary btn-sm active' %>
        </p>
      </tbody>
    </table>
  </div>
</div>