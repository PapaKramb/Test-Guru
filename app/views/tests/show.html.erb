<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @test.author.name %>
  <%= @test.questions.count %> questions
</p>

<p>
  <table>
    <thead>
      <tr>
        <strong>Questions:</strong>
      </tr>
    </thead>
      <tbody>
      <% @test.questions.each do |test| %>
        <tr>
          <td colspan = 3></th>
          <td><%= test.body %></td>
          <td><%= link_to 'Edit', edit_test_question_path(@test) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</p>

<p>
  <%= link_to 'New question', new_test_question_path(@test), class: 'btn' %><br>
</p>

<p>
  <%= link_to 'Back', tests_path %>
</p>
