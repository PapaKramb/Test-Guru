<%= form_with model: @test, local: true do |f| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= f.label :level %>
    <%= f.number_field :level, id: :test_level %>
  </p>

  <p>
    <%= f.label :author %>
    <%= f.collection_select :user_id, User.all, :id, :name, prompt: true %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <p>
    <%= link_to 'Back', tests_path %>
  </p>

<% end %>