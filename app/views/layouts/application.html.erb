<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="nav title">
        <h1><%= link_to 'TestGuru', root_path, class: 'nav title' %></h1>
      </div>
      <div class="nav user">
        <% if logged_in? %>
            Welcome, <b><%= current_user.email %></b> Guru
            | <b><%= link_to 'Logout', logout_path, method: :delete %></b>
        <% else %>
            <b>
              <%= link_to 'Registration', users_new_path %>
            | <%= link_to 'Login', login_path %>
            </b>
        <% end %>
      </div>

    <%= yield %>
    
  </body>

  <%= render 'shared/footer' %>

</html>
