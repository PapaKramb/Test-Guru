<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <h1>
        <%= link_to 'TestGuru', root_path %>
      </h1>
      
      <span class="navbar-text">
        <% if user_signed_in? %>
            Welcome, <b><%= current_user.email %></b> Guru |
            <b><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %></b>
        <% else %>
            <b>
              <%= link_to 'Registration', new_user_registration_path %> |
              <%= link_to 'Login', new_user_session_path %>
            </b>
        <% end %>
      </span>
    </nav>

      <%= render 'shared/flash' %>

    <%= yield %>
    
  </body>

  <%= render 'shared/footer' %>

</html>
